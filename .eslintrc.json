{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "always"], // Ensures semicolons are required
      "react-hooks/exhaustive-deps": "warn" // Manages useEffect dependencies
    }
  }